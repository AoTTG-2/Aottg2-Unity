{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Custom Logic",
  "scopeName": "source.cl",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#functions" },
    { "include": "#constants" },
    { "include": "#class-names" },
    { "include": "#builtin-types" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.cl",
          "match": "#.*$"
        },
        {
          "name": "comment.line.double-slash.cl",
          "match": "//.*$"
        },
        {
          "name": "comment.block.cl",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.cl",
          "match": "\\b(if|else|while|for|in|return|break|continue|wait)\\b"
        },
        {
          "name": "keyword.other.cl",
          "match": "\\b(class|function|self)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.cl",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.cl",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.cl",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.cl",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.cl",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.cl",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.cl",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.cl",
          "match": "&&|\\|\\||!"
        },
        {
          "name": "keyword.operator.arithmetic.cl",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.assignment.cl",
          "match": "="
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.cl",
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(?=\\()"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.cl",
          "match": "\\b(true|false|null)\\b"
        }
      ]
    },
    "class-names": {
      "patterns": [
        {
          "name": "entity.name.type.class.cl",
          "match": "\\b(class)\\s+([A-Z][A-Za-z0-9_]*)\\b",
          "captures": {
            "1": { "name": "keyword.other.cl" },
            "2": { "name": "entity.name.type.cl" }
          }
        },
        {
          "name": "support.class.cl",
          "match": "\\b(Game|UI|Convert|String|List|Range|Int2)\\b"
        }
      ]
    },
    "builtin-types": {
      "patterns": [
        {
          "name": "support.type.cl",
          "match": "\\b(int|float|string|bool|void)\\b"
        }
      ]
    }
  }
}
