{
  "Category": "General",
  "SubCategory": "1k",
  "Name": "1k Legacy",
  "Description": "1k minimum damage required to kill titans.",
  "Extends": "base_waves_mode",

  "UIRules": [
    "general.modes=waves{waves,survive,endless,cranked}",
    "general.maps=forest",

    "!misc.allow_player_titans=false",   // force off + disable editing
    "+misc.allow_shifter_specials",      // allow toggle

    "titan.min_size=2.5[0-3.0]",         // default=2.5, min=0, max=3.0
    "titan.max_size=3.0[0-3.0]",         // default=3.0, min=0, max=3.0

    "general.difficulty=normal{easy,normal,hard,abnormal}", // allowed values list

    "-debug.*"                           // hides all debug.* settings
  ]
}